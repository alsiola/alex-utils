{
    "name": "alex-utils",
    "version": "0.0.1",
    "description": "",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "scripts": {
        "test:watch": "jest --watchAll",
        "test":
            "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "build": "tsc"
    },
    "readme": "https://github.com/alsiola/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/alsiola/alex-utils.git"
    },
    "keywords": [],
    "author": "Alex Young<http://github.com/alsiola>",
    "license": "ISC",
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testPathIgnorePatterns": ["/node_modules/", "/lib/"],
        "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
        "collectCoverageFrom": ["lib/**/*.js"]
    },
    "devDependencies": {
        "@types/jest": "^21.1.8",
        "@types/node": "^8.0.58",
        "coveralls": "^3.0.0",
        "jest": "^21.2.1",
        "ts-jest": "^21.2.4",
        "ts-node": "^4.0.1",
        "typescript": "^2.7.0-dev.20171221"
    }
}
